<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/details_layout"
              android:name="pl.krzysztofwojciechowski.tvphotos.VideoDetailsFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".DetailsActivity"
              android:keepScreenOn="true"
              tools:deviceIds="tv" android:orientation="vertical">

    <ImageView android:layout_width="match_parent" android:layout_height="0dp" android:scaleType="centerCrop"
               android:layout_weight="1" android:id="@+id/details_image" android:transitionName="hero"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/details_title"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:textSize="30sp" android:layout_marginLeft="8dp"
                android:fontFamily="sans-serif-condensed-medium"/>
        <Button
                android:id="@+id/details_back"
                android:text="@string/back_to_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" style="@style/Widget.Leanback.DetailsActionButtonStyle"/>
    </LinearLayout>
</LinearLayout>